<project name="takamaka_whitelisting" default="dist Java 8" basedir=".">
  <description>
    Compiles the Takamaka white-lisiting module
  </description>

  <property name="src" location="src"/>
  <property name="build" location="build"/>
  <property name="dist" location="../takamaka_distribution/dist"/>

  <target name="clean" description="clean up">
	<delete dir="${build}"/>
  </target>

  <target name="init" depends="clean">
    <mkdir dir="${build}"/>
  </target>

  <target name="compile" depends="init" description="compile">
	<javac srcdir="${src}" destdir="${build}" source="9" target="9" includeantruntime="no">
		<compilerarg value="-Xlint"/>
		<modulepath path ="../takamaka_distribution/mods"/>
    </javac>
  </target>

  <target name="compile Java 8" depends="init" description="compile into Java 8 code">
	<javac srcdir="${src}" destdir="${build}" source="8" target="8" includeantruntime="no" excludes="module-info.java">
	    <classpath>
		   <fileset dir="../takamaka_distribution/libs" includes="*.jar" />
	  	</classpath>
	</javac>
  </target>

  <target name="dist" depends="compile" description="generate the distribution">
    <jar jarfile="${dist}/io-takamaka-whitelisting-1.0.jar" basedir="${build}"/>
  </target>

  <target name="dist Java 8" depends="compile Java 8" description="generate the distribution">
	<jar jarfile="${dist}/io-takamaka-whitelisting-1.0.jar" basedir="${build}">
		<manifest>
			<attribute name="Automatic-Module-Name" value = "io.takamaka.whitelisting" />
		</manifest>
  	</jar>
  </target>

</project>
