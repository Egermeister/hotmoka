{
  "name": "hotmoka",
  "version": "1.0.0",
  "description": "JavaScript/TypeScript thin client for a hotmoka remote node.",
  "main": "dist/hotmoka.js",
  "types": "dist/types/index.d.ts",
  "scripts": {
    "lint": "eslint . --ext .ts",
    "types": "npx tsc --declaration --outDir dist/types --emitDeclarationOnly",
    "bundle": "npm run clean && npm run lint && npx webpack --mode production",
    "bundle:all": "npm run clean && npm run bundle && npm run types",
    "clean": "npx rimraf dist",
    "test": "mocha -r ts-node/register test/**/**.ts"
  },
  "keywords": ["hotmoka", "client"],
  "author": "Dinu Berinde",
  "license": "ISC",
  "dependencies": {
    "axios": "^0.21.1"
  },
  "devDependencies": {
    "@types/chai": "^4.2.18",
    "@types/mocha": "^8.2.2",
    "@types/node": "^15.3.0",
    "@typescript-eslint/eslint-plugin": "^4.23.0",
    "@typescript-eslint/parser": "^4.23.0",
    "chai": "^4.3.4",
    "eslint": "^7.26.0",
    "mocha": "^8.4.0",
    "rimraf": "^3.0.2",
    "ts-loader": "^9.2.1",
    "ts-node": "^9.1.1",
    "typescript": "^4.2.4",
    "webpack": "^5.37.1",
    "webpack-cli": "^4.7.0"
  }
}
