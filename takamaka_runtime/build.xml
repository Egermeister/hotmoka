<project name="takamaka_runtime" default="dist" basedir=".">
  <description>
    Compiles the takamaka_runtime project
  </description>

  <property name="src" location="src"/>
  <property name="src_takamaka_base" location="src_takamaka_base"/>
  <property name="build" location="build"/>
  <property name="build_takamaka_base" location="build_takamaka_base"/>
  <property name="dist" location="dist"/>

  <target name="clean" description="clean up">
	<delete dir="${build}"/>
  	<delete dir="${build_takamaka_base}"/>
	<delete dir="${dist}"/>
  </target>

  <target name="init" depends="clean">
    <mkdir dir="${build}"/>
  	<mkdir dir="${build_takamaka_base}"/>
  </target>

  <target name="compile" depends="init" description="compile the source">
    <javac srcdir="${src}" destdir="${build}">
      <classpath>
    	<fileset dir="lib" includes="*.jar" />
      </classpath>
    </javac>
    <javac srcdir="${src_takamaka_base}" destdir="${build_takamaka_base}">
      <classpath>
      	<pathelement location="build/"/>
      </classpath>
    </javac>
  </target>

  <target name="dist" depends="compile" description="generate the distribution">
    <mkdir dir="${dist}"/>
    <jar jarfile="${dist}/takamaka_runtime.jar" basedir="${build}"/>
    <jar jarfile="${dist}/takamaka_base.jar" basedir="${build_takamaka_base}"/>
  </target>

</project>
