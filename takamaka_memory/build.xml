<project name="takamaka_memory" default="dist" basedir=".">
  <description>
    Compiles the takamaka_memory project
  </description>

  <property name="src" location="src"/>
  <property name="build" location="build"/>
  <property name="dist" location="dist"/>

  <target name="clean" description="clean up">
	<delete dir="${build}"/>
	<delete dir="${dist}"/>
  </target>

  <target name="init" depends="clean">
    <mkdir dir="${build}"/>
  </target>

  <target name="compile" depends="init" description="compile the source">
    <javac srcdir="${src}" destdir="${build}">
   	  <classpath>
   	  	<pathelement path="../takamaka_runtime/bin" />
      </classpath>
    </javac>
  </target>

  <target name="dist" depends="compile" description="generate the distribution">
    <mkdir dir="${dist}"/>
    <jar jarfile="${dist}/takamaka_memory.jar" basedir="${build}"/>
  </target>

  <target name="run_test" depends="dist" description="run the memory blockchain test class">
  	<java classname="takamaka.memory.MemoryBlockchainTest">
  	  <classpath>
  	  	<pathelement location="dist/takamaka_memory.jar"/>
  	    <pathelement location="../takamaka_runtime/dist/takamaka_runtime.jar"/>
  	    <pathelement location="../takamaka_runtime/lib/bcel-6.2.jar"/>
  	  </classpath>
  	</java>
  </target>

</project>
